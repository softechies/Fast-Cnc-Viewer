# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/fastcnc_viewer
PGHOST=localhost
PGPORT=5432
PGUSER=username
PGPASSWORD=password
PGDATABASE=fastcnc_viewer

# AWS S3 Configuration (Optional - for cloud storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=your_aws_region
AWS_S3_BUCKET_NAME=your_s3_bucket_name

# Email Configuration (SMTP)
SMTP_HOST=smtp.yourmailprovider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@domain.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@yourdomain.com

# Custom SMTP Configuration (Alternative)
GMAIL_USER=your_gmail@gmail.com
GMAIL_PASSWORD=your_app_password

# Google Translate API (for multilingual features)
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key

# Session Secret (generate a random string)
SESSION_SECRET=your_random_session_secret_string